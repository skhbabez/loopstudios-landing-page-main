---
interface Props {
  mobileImgUrl: string;
  desktopImgUrl: string;
  alt: string;
  title: string;
  href: string;
}

const { mobileImgUrl, desktopImgUrl, alt, title, href } = Astro.props;
const base = import.meta.env.BASE_URL;
const mobileSrc = `${base}/${mobileImgUrl}`;
const desktopSrc = `${base}/${desktopImgUrl}`;
---

<a
  href={href}
  class="block relative h-30 min-w-[327px] xl:min-w-auto xl:w-64 xl:h-112.5 group"
>
  <span
    class="z-10 hover absolute max-w-32 xl:max-w-44 left-5 md:left-10 bottom-5 xl:bottom-8 uppercase text-5 text-white xl:text-4 group-hover:text-black transition delay-75 duration-300 ease-in-out"
  >
    {title}
  </span>
  <picture>
    <source media="(min-width: 1280px)" srcset={desktopSrc} />
    <img
      class="object-cover object-bottom md:object-top w-full h-full group-hover:opacity-25 transition delay-75 duration-300 ease-in-out"
      src={mobileSrc}
      alt={alt}
    />
  </picture>
</a>
